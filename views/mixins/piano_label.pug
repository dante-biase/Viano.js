include grid


mixin piano_label()
    - var id = attributes.id
    - var icon = attributes.icon
    - var text = attributes.text ? attributes.text : "- - -"
    - var font_size = attributes.font_size ? attributes.font_size : 12
    - var icon_size = attributes.icon_size ? attributes.icon_size : [15, 15]

    - 
        let astyle = {
            "background-size": `${icon_size[0]}px ${icon_size[1]}px`,
            "background-position": "center",
            "background-repeat": "no-repeat",
            "width": icon_size[0] + "px",
            "height": icon_size[1] + "px",
            "margin-right": "10px",
            "align-items": "center",
        };

        Object.assign(astyle, attributes.astyle ? attributes.astyle : {});

    +grid(columns=".5fr 5fr", astyle={"align-items": "center"})
        img(src=icon, style=astyle)
        span(id=id, style="white-space: nowrap;color: #DD8540;")
            | #{text}
